page{
  height: 100%;
}
/*相当于设置html，body*/
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
}

.container .nav{
  height: 44px;
}
.nav ul{
  display: flex;
}
.nav ul li{
  flex:1;
 text-align: center;
  height: 44px;
  line-height: 44px;
  box-sizing: border-box;
}
.nav ul li.active{
  color: #14c145;
  border-bottom: 2px solid #14c145;
}

.container .content{
  flex: 1;
  margin-top: 2px;
}
.container .content swiper{
  height: 100%;
}
swiper-item scroll-view{
  height: 100%;
}
swiper ul{
  height: 100%;
  display: flex;
  flex-wrap: wrap;
  margin-right: 10px;
}
swiper ul li{
  width: 50%;
  padding-left: 10px;
  box-sizing: border-box;
}
swiper ul li image{
  width: 100%;
    height: 160px;
}

